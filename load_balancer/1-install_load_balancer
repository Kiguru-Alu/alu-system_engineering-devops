#!/usr/bin/env bash
# Installs and configures an HAProxy load balancer using roundrobin

# 1. Install HAProxy if not installed
if ! command -v haproxy >/dev/null 2>&1; then
    apt-get update -y
    apt-get install -y haproxy
fi

# 2. Enable haproxy service
if ! grep -q "ENABLED=1" /etc/default/haproxy; then
    sed -i 's/ENABLED=0/ENABLED=1/' /etc/default/haproxy 2>/dev/null \
    || echo "ENABLED=1" >> /etc/default/haproxy
fi

# 3. Write HAProxy configuration
cat <<EOF > /etc/haproxy/haproxy.cfg
global
    log /dev/log local0
    log /dev/log local1 notice
    user haproxy
    group haproxy
    daemon

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000

frontend http_front
    bind *:80
    default_backend http_back

backend http_back
    balance roundrobin
    server web-01 <WEB01_IP>:80 check
    server web-02 <WEB02_IP>:80 check
EOF

# 4. Restart haproxy
systemctl restart haproxy

